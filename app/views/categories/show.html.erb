<!-- app/views/categories/show.html.erb -->
<h1><%= @category.name %></h1>

<ul>
  <% @category.tasks.each do |task| %>
    <li><%= link_to task.name, category_task_path(@category, task) %></li>
  <% end %>
</ul>

<%= link_to 'Edit Category', edit_category_path(@category) %>
<%= button_to 'Delete Category', @category, method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'Back to Categories', categories_path %>
<%= link_to 'Create New Task', new_category_task_path(@category) %>
