<!-- app/views/tasks/show.html.erb -->
<% if @task %>
  <h1><%= @task.name %></h1>
  <p><strong>Description:</strong> <%= @task.description %></p>
  <p><strong>Due Date:</strong> <%= @task.due_date.strftime('%Y-%m-%d') %></p>
  <!-- Add more details as needed -->
  <%= link_to 'Edit Task', edit_category_task_path(@category, @task) %>
  <%= button_to 'Delete Task', category_task_path(@category, @task), method: :delete, data: { confirm: 'Are you sure?' } %>
<% else %>
  <p>Task not found</p>
<% end %>
